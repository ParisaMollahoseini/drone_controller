<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.rajawali3d.surface.RajawaliSurfaceView
        android:id="@+id/raj"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/info_grid"
        android:layout_columnWeight="0.5"/>

    <GridLayout
        android:id="@+id/info_grid"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_columnWeight="0.5"
        android:columnCount="1"
        android:rowCount="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.5"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/roll"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="@string/roll" />

            <TextView
                android:id="@+id/roll_change"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/not_available" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pitch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="@string/pitch" />

            <TextView
                android:id="@+id/pitch_change"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/not_available" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yaw"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="@string/yaw" />

            <TextView
                android:id="@+id/yaw_change"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/not_available" />
        </LinearLayout>

    </GridLayout>
</RelativeLayout>